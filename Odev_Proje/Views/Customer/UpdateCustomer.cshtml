@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"] = "UpdateCustomer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateCustomer","Customer", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Deneyim Düzenleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x => x.CustomerID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Ad</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Soyad</label>
                        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label> Doğum Tarihi</label>
                        @Html.TextBoxFor(x => x.DateOfBirth, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Telefon Numarası</label>
                        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Mail</label>
                        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Kayıt Tarihi</label>
                        @Html.TextBoxFor(x => x.RegistrationDate, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Cinsiyet</label>
                        @Html.TextBoxFor(x => x.Gender, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Durum</label>
                        @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
                    </div>
                 
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}